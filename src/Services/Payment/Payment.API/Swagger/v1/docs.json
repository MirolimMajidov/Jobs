{
  "openapi": "3.0.1",
  "info": {
    "title": "Payment service's RESTful APIs documentation",
    "version": "v1"
  },
  "paths": {
    "/api/Payment": {
      "post": {
        "tags": [
          "Payment"
        ],
        "summary": "To add a new item. For this you must be authorized",
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Return OK if it's added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          },
          "400": {
            "description": "Entity can't be null",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Payment"
        ],
        "summary": "To update exists an item. For this you must be authorized",
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentDTO"
              }
            }
          }
        },
        "responses": {
          "501": {
            "description": "We will not support updating paymnet's information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          },
          "200": {
            "description": "Return OK if it's updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          },
          "400": {
            "description": "Entity can'tbe null",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          },
          "404": {
            "description": "An item with the specified ID was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Payment"
        ],
        "summary": "To get all items",
        "responses": {
          "200": {
            "description": "Return list of found items if it's finished successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Payment/PaymentsByUserId/{userId}": {
      "get": {
        "tags": [
          "Payment"
        ],
        "summary": "To get payments by user Id",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return the found payments if it's finished successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Payment/{id}": {
      "get": {
        "tags": [
          "Payment"
        ],
        "summary": "To get an item by Id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return the found item if it's finished successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          },
          "404": {
            "description": "An item with the specified ID was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Payment"
        ],
        "summary": "To delete an item. For this you must be authorized",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return OK if it's deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          },
          "404": {
            "description": "An item with the specified ID was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CurrencyType": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      },
      "PaymentDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "userName": {
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "$ref": "#/components/schemas/CurrencyType"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "sender": {
            "type": "string",
            "nullable": true
          },
          "paymentStatus": {
            "$ref": "#/components/schemas/PaymentStatus"
          }
        },
        "additionalProperties": false
      },
      "PaymentStatus": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      },
      "RequestModel": {
        "type": "object",
        "properties": {
          "errorId": {
            "type": "integer",
            "format": "int32"
          },
          "error": {
            "type": "string",
            "nullable": true
          },
          "result": {
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme.  Enter 'Bearer' [space] and then your token in the text input below. Example: 'Bearer 12345abcdef'",
        "scheme": "Bearer"
      }
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ]
}